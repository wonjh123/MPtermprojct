<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_stroke" />

    <TextView
        android:id="@+id/date_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photo"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/photo"
        android:fontFamily="@font/gmarketsans_ttf_medium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@+id/date_item_name"
        android:layout_toEndOf="@id/photo"
        android:fontFamily="@font/gmarketsans_ttf_light"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/date_item_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_item_location"
        android:layout_toEndOf="@id/photo"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp" />


</RelativeLayout>
