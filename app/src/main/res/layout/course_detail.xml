<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button_low"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:text="like"
            />

        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_toRightOf="@+id/like_btn"
            android:layout_alignBaseline="@+id/like_btn"
            android:layout_marginLeft="10dp"
            android:text="num"
            />

        <TextView
            android:id="@+id/show_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/like_btn"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/like_btn"
            android:text="keyword"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"

            android:text="코스 후기"
            />

    </ScrollView>



</LinearLayout>